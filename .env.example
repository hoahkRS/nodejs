# Server
PORT=3000
NODE_ENV=development

# Database (choose ONE approach)
# 1) URI contains credentials (recommended for production)
# MONGO_URI=mongodb+srv://<user>:<pass>@<host>/<db>?retryWrites=true&w=majority

# 2) URI without credentials + separate user/pass (handy for some deployments)
# MONGO_URI=mongodb://your-host:27017/your-db
# MONGO_USER=
# MONGO_PASS=
# MONGO_AUTH_SOURCE=admin

# Fallback behavior: if MONGO_USER/MONGO_PASS are not provided (or empty/null),
# the app will connect to local MongoDB at mongodb://localhost:27017/nodejs

# Test database (recommended local-only to avoid network dependency)
MONGO_URI_TEST=

# Auth
JWT_SECRET=change_me_super_secret
JWT_EXPIRES_IN=1d

# Uploads
# Can be absolute (e.g., D:\\Data\\uploads) or relative to project root
UPLOADS_DIR=uploads
MAX_UPLOAD_SIZE_MB=2

# Email (SendGrid)
# Leave empty in local/test; the app no-ops in NODE_ENV=test
SENDGRID_API_KEY=
SENDGRID_FROM=
